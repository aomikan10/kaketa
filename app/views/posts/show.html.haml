.wrapper
  = render "header"
  .Body
    .Post
      .MoreTag
        .Tags
          .Tag
            "# 宮沢賢治"
          .Tag
            "# ウサギ"
          .Tag
            "# 青空文庫"
      .Main
        .DateBox
          .date
            投稿:
            = @post.created_at.strftime("%Y年%m月%d日 %H時%M分")
          .Likes
            = render partial: 'likes/like', locals: { post: @post}
          .Comments
            = link_to new_post_comment_path(@post.id) do
              = icon('far', 'comment')
          .Count
            = @post.comments.count
        .TextAll
          = @post.text
      .DataBox
        .WriterName
          = @post.user.name
        .Title
          = @post.title
      .CatchCopy
        = @post.copy
  .Footer
