%h2 Edit Account
    %h5 アカウントの編集
    = link_to "ログアウト", '#', class: 'Button'
    = link_to "トップページに戻る", :back, class: 'Button'
    = form_for(current_user) do |f|
        = f.label :name
        = f.text_field :name, autofocus: true
        = f.label :email
        = f.email_field :email
      = f.submit "Update"