.AccountPage
  .AccountPageField
    .AccountPageField__Title
      %h1 kaketa.
    .AccountPageField__contents
      = form_with model: @user do |f|
        .FormField
          .FormField__label
            = f.label :name
          .FormField__input
            = f.text_field :name, autofocus: true
        .FormField
          .FormField__label
            = f.label :email
          .FormField__input
            = f.email_field :email
        .FormField
          .FormField__label
            = f.label :password
            %i (英数字8文字以上)
          .FormField__input
            = f.password_field :password, autocomplete: "off"
        .FormField
          .FormField__label
            = f.label :password_confirmation
          .FormField__input
            = f.password_field :password_confirmation, autocomplete: "off"
        .actions
          = f.submit "Join us!", class: 'Button UserButton'
  .AccountFooter
