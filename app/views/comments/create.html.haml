.wrapper
  = render "header"
  .AccountPage
    .AccountPage__title
      %h5 - comment -
    .AccountPage__form
      = form_for(@comment) do |f|
        .FormField
          .FormField__label--normal
            = f.label :text
          .FormField__input--normal
            = f.text_area :text, rows:10, cols:39.5
        .actions
          = f.submit "SEND", class: 'Button UserButton'
  .Footer
